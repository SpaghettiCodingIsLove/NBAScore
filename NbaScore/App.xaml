<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NbaScore.App"
             >
    <Application.Resources>
        <Color x:Key="Primary">#17408b</Color>
        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
            <Setter Property="BarTextColor" Value="White" />
            <Setter Property="BackgroundColor" Value="#A1A1A1" />
        </Style>
        <Color x:Key="BarBackgroundColor">#17408b</Color>
        <Color x:Key="PageBackgroundColor">#A1A1A1</Color>
        <Color x:Key="NavigationBarColor">#17408b</Color>
        <Color x:Key="PrimaryColor">#17408b</Color>
        <Color x:Key="SecondaryColor">#c9082a</Color>
        <Color x:Key="PrimaryTextColor">White</Color>
        <Color x:Key="SecondaryTextColor">White</Color>
        <Color x:Key="TertiaryTextColor">Gray</Color>
        <Color x:Key="TransparentColor">Transparent</Color>
    </Application.Resources>
</Application>